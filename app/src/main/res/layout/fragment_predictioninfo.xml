<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/prediction_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PredictionInfoFragment"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/fish_predicted_title"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_menu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="Fish Prediction"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center"/>


    <ImageView
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/image_uploaded_by_user"
        android:layout_below="@+id/fish_predicted_title"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/pred_fish_name"
        android:layout_below="@+id/image_uploaded_by_user"
        android:background="@drawable/rounded_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prediction Fragment"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:padding="8dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/click_for_more_info"
        android:layout_below="@+id/pred_fish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here\nfor more info"
        android:background="@drawable/rounded_menu"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:clickable="true"/>

</RelativeLayout>