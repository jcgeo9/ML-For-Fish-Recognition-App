<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/dark_gray"
    android:orientation="vertical"
    android:background="@drawable/rounded_edit_text">


    <LinearLayout
        android:id="@+id/linear_layout_info_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="2"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/info_item_image"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"/>

        <RelativeLayout
            android:layout_marginStart="2dp"
            android:id="@+id/fishNamesInLanguages"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:layout_height="130dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/info_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="8dp"
                android:text="Polyprion americanus"
                android:singleLine="false"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider_view"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_below="@id/info_item_text"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_below="@id/divider_view"
                android:id="@+id/info_item_textEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="English Name"
                android:singleLine="false"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@id/info_item_textEn"
                android:id="@+id/info_item_textGr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="Greek Name"
                android:singleLine="false"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Timestamp"
        android:singleLine="false"
        android:textSize="14sp" />
</LinearLayout>