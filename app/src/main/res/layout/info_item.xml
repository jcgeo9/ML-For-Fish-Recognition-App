<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/dark_gray"
    android:background="@drawable/rounded_edit_text">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:weightSum="2"
        android:padding="8dp">

        <ImageView
            android:id="@+id/info_item_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"/>

        <RelativeLayout
            android:layout_marginStart="2dp"
            android:id="@+id/fishNamesInLanguages"
            android:layout_width="0dp"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/info_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="8dp"
                android:text="Polyprion americanus"
                android:singleLine="false"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider_view"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_below="@id/info_item_text"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <TextView
                android:layout_below="@id/divider_view"
                android:id="@+id/info_item_textEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="English Name"
                android:singleLine="false"
                android:textSize="14sp" />
            <TextView
                android:layout_below="@id/info_item_textEn"
                android:id="@+id/info_item_textGr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="4dp"
                android:text="Greek Name"
                android:singleLine="false"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>